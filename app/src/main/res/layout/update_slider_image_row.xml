<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/allPdfRootLayoutCardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/slider_height"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    card_view:elevation="5dp">

    <RelativeLayout
        android:id="@+id/rootRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sliderImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/unnamed"
            android:scaleType="fitXY"/>

        <View
            android:id="@+id/view_gallery_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_thum_textview_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sliderHeadingTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:text="Blood Donation Campaign 2021 heald on Today"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/createSliderByNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sliderHeadingTV"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="by admin"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/slidepostingTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sliderHeadingTV"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text="1 minutes ago"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>