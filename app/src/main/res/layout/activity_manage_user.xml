<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ManageUserActivity">

    <include layout="@layout/admin_navigation_up_toolbar_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/select_ractangle_shape">

        <TextView
            android:id="@+id/updateSaveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select And Add Admin"
            android:padding="@dimen/_5sdp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/addAdminButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shadow_button_shape"
            android:padding="@dimen/_5sdp"
            android:text="Add Admin"
            android:textAllCaps="false" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manageuserRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>